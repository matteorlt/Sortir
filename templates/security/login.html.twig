{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <div class="container mt-5">
        <div class="row flex-lg-row align-items-start g-5">
            <!-- Formulaire à gauche -->
            <div class="col-lg-7">
                <div>
                    <div class="card-header text-black text-center">
                        <h1 class="h3 mb-0">Se connecter</h1>
                    </div>

                    <div class="card-body p-4">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger mb-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info mb-4">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Vous êtes déjà connecté en tant que {{ app.user.userIdentifier }},
                                    <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                                </div>
                            {% endif %}

                            <div class="mb-4">
                                <label for="username" class="form-label fw-bold">Email</label>
                                <span class="text-danger">*</span>
                                <input type="text"
                                       value="{{ last_username }}"
                                       name="_username"
                                       id="username"
                                       class="form-control"
                                       placeholder="votre.email@eni.fr"
                                       autocomplete="username"
                                       required
                                       autofocus>
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-bold">Mot de passe</label>
                                <span class="text-danger">*</span>
                                <input type="password"
                                       name="_password"
                                       id="password"
                                       class="form-control"
                                       placeholder="Votre mot de passe"
                                       autocomplete="current-password"
                                       required>
                            </div>

                            <div class="form-text text-end mt-1">
                                <a href="{{ path('app_forgot_password') }}" class="text-muted text-decoration-none small">
                                    <i class="fas fa-question-circle me-1"></i>Mot de passe oublié ?
                                </a>
                            </div>

                            <input type="hidden"
                                   name="_csrf_token"
                                   data-controller="csrf-protection"
                                   value="{{ csrf_token('authenticate') }}">

                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox"
                                           name="_remember_me"
                                           id="_remember_me"
                                           class="form-check-input">
                                    <label for="_remember_me" class="form-check-label">
                                        Se souvenir de moi
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <button type="submit" class="btn btn-primary btn-lg me-md-2"
                                        style="background-color: #8f00ff; border-color: #8f00ff; transition: all 0.3s ease;"
                                        onmouseover="this.style.backgroundColor='#7300cc'; this.style.borderColor='#7300cc';"
                                        onmouseout="this.style.backgroundColor='#8f00ff'; this.style.borderColor='#8f00ff';">
                                    <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                </button>
                                <a href="{{ path('app_home') }}" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Retour à l'accueil
                                </a>
                            </div>

                            <div class="text-center mt-4">
                                <p class="text-muted">
                                    Pas encore de compte ?
                                    <a href="{{ path('app_utilisateur_inscription') }}" class="text-decoration-none">
                                        Créer un compte
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Image à droite -->
            <div class="col-lg-5 d-flex align-items-center justify-content-center">
                <div>
                    <img src="{{ asset('images/photo-login.jpg') }}"
                         alt="Connexion utilisateur"
                         class="img-fluid"
                         style="max-width: 400px; height: auto;">
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_footer.html.twig' %}

{% endblock %}