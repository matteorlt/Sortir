{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - Sortir.com{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <!-- Bannière principale (Hero section) -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-5">

                <!-- Contenu texte à gauche -->
                <div class="col-lg-6 order-2 order-lg-1">
                    <!-- Titre principal -->
                    <h1 class="display-3 fw-bold text-dark mb-4">
                        Planifiez. Participez. Partagez.
                    </h1>

                    <!-- Sous-titre -->
                    <p class="fs-5 text-muted mb-4">
                        La plateforme des sorties extra-scolaires pour les stagiaires ENI et anciens stagiaires.
                    </p>

                    <!-- Boutons d'action -->
                    <div class="d-flex flex-column flex-sm-row gap-3">
                        <a href="{{ path('app_sortie_list') }}"
                           class="btn btn-primary btn-lg px-4 py-3 fw-medium"
                           style="background-color: #8f00ff; border-color: #8f00ff; transition: all 0.3s ease;"
                           onmouseover="this.style.backgroundColor='#7300cc'; this.style.borderColor='#7300cc';"
                           onmouseout="this.style.backgroundColor='#8f00ff'; this.style.borderColor='#8f00ff';">
                        <a href="{{ path('app_sortie_list') }}" class="btn btn-primary btn-lg px-4 py-3 fw-medium">
                            Découvrir les sorties
                        </a>

                        {% if app.user %}
                            <a href="{{ path('app_sortie_create') }}"
                               class="btn btn-outline-secondary btn-lg px-4 py-3 fw-medium"
                               style="transition: all 0.3s ease;"
                               onmouseover="this.style.backgroundColor='#6c757d'; this.style.borderColor='#6c757d'; this.style.color='white'; "
                               onmouseout="this.style.backgroundColor='transparent'; this.style.borderColor='#6c757d'; this.style.color='#6c757d';">
                                Créer une sortie
                            </a>
                        {% else %}
                            <a href="{{ path('app_login') }}"
                               class="btn btn-outline-secondary btn-lg px-4 py-3 fw-medium"
                               style="transition: all 0.3s ease;"
                               onmouseover="this.style.backgroundColor='#6c757d'; this.style.borderColor='#6c757d'; this.style.color='white';"
                               onmouseout="this.style.backgroundColor='transparent'; this.style.borderColor='#6c757d'; this.style.color='#6c757d';">
                                Se connecter
                            </a>
                        {% endif %}
                        <a href="{{ path('app_sortie_create') }}" class="btn btn-outline-secondary btn-lg px-4 py-3 fw-medium">
                            Créer une sortie
                        </a>
                    </div>
                </div>

                <!-- Image à droite -->
                <div class="col-lg-6 order-1 order-lg-2 text-center text-lg-end">
                    <img src="{{ asset('images/photo-amis-home.jpg') }}"
                         alt="Amis qui sortent ensemble"
                         class="img-fluid rounded"
                         style="max-width: 600px;">
                </div>
            </div>
        </div>
    </section>

    <!-- Section "Pourquoi Sortir.com ?" -->
    <section>
        <div class="container">
            <div class="p-4">
                <div class="row align-items-start g-5">
                    <!-- Image à gauche -->
                    <div class="col-lg-5">
                        <img src="{{ asset('images/photo-reseaux-home.jpg') }}"
                             alt="Réseaux sociaux"
                             class="img-fluid rounded"
                             style="max-width: 600px;">
                    </div>

                    <!-- Contenu à droite -->
                    <div class="col-lg-7">
                        <!-- Titre de la section -->
                        <div class="mb-5">
                            <h2 class="h1 fw-bold text-dark mb-3">
                                Pourquoi Sortir.com ?
                            </h2>
                            <p class="fs-5 text-muted">
                                La solution complète pour organiser vos sorties entre stagiaires ENI
                            </p>
                        </div>

                        <!-- Grille des avantages -->
                        <div class="row g-4">

                            <!-- Accessible partout -->
                            <div class="col-md-6">
                                <div class="text-center text-md-start">
                                    <h3 class="h5 fw-semibold text-dark mb-2">
                                        <i class="fas fa-mobile-alt text-primary me-2"></i>
                                        Accessible partout
                                    </h3>
                                    <p class="text-muted">
                                        Interface responsive, simple et mobile-friendly.
                                    </p>
                                </div>
                            </div>

                            <!-- Communauté ENI -->
                            <div class="col-md-6">
                                <div class="text-center text-md-start">
                                    <h3 class="h5 fw-semibold text-dark mb-2">
                                        <i class="fas fa-users text-primary me-2"></i>
                                        Communauté ENI
                                    </h3>
                                    <p class="text-muted">
                                        Renforcez les liens avec d'autres stagiaires.
                                    </p>
                                </div>
                            </div>

                            <!-- Organisation simplifiée -->
                            <div class="col-md-6">
                                <div class="text-center text-md-start">
                                    <h3 class="h5 fw-semibold text-dark mb-2">
                                        <i class="fas fa-cog text-primary me-2"></i>
                                        Organisation simplifiée
                                    </h3>
                                    <p class="text-muted">
                                        Inscriptions et gestion 100% digitalisées.
                                    </p>
                                </div>
                            </div>

                            <!-- Par campus -->
                            <div class="col-md-6">
                                <div class="text-center text-md-start">
                                    <h3 class="h5 fw-semibold text-dark mb-2">
                                        <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                        Par campus
                                    </h3>
                                    <p class="text-muted">
                                        Trouvez les événements proches de vous.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% include 'components/_footer.html.twig' %}

{% endblock %}