{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h1 class="h3 mb-0"><i class="fas fa-user me-2"></i>Mon Profil</h1>
                    </div>

                    <div class="card-body p-4">
                        {% if app.user %}

                            <!-- Photo de profil -->
                            <div class="text-center mb-4">
                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto border border-3 border-primary"
                                         style="width: 120px; height: 120px;">
                                        <i class="fas fa-user fa-3x text-white"></i>
                                    </div>
                            </div>

                            <!-- Informations personnelles -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Pseudo</label>
                                <div class="form-control bg-light">{{ app.user.pseudo }}</div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="form-label fw-bold">Nom</label>
                                    <div class="form-control bg-light">{{ app.user.nom }}</div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Prénom</label>
                                    <div class="form-control bg-light">{{ app.user.prenom }}</div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label class="form-label fw-bold">Téléphone</label>
                                    <div class="form-control bg-light">
                                        {% if app.user.telephone %}
                                            {{ app.user.telephone }}
                                        {% else %}
                                            <span class="text-muted fst-italic">Non renseigné</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Email</label>
                                    <div class="form-control bg-light">{{ app.user.mail }}</div>
                                </div>
                            </div>

                            <!-- Statistiques (optionnel) -->
                            <div class="row mb-4">
                                <div class="col-4 text-center">
                                    <div class="card bg-light border-0">
                                        <div class="card-body py-2">
                                            <h5 class="text-primary mb-0">0</h5>
                                            <small class="text-muted">Sorties créées</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-center">
                                    <div class="card bg-light border-0">
                                        <div class="card-body py-2">
                                            <h5 class="text-primary mb-0">0</h5>
                                            <small class="text-muted">Participations</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4 text-center">
                                    <div class="card bg-light border-0">
                                        <div class="card-body py-2">
                                            <h5 class="text-success mb-0">Actif</h5>
                                            <small class="text-muted">Statut</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
{#                                <a href="{{ path('app_utilisateur_edit_profil') }}" class="btn btn-primary btn-lg me-md-2">#}
                                    <i class="fas fa-edit me-2"></i>Modifier mon profil
{#                                </a>#}
                                <a href="{{ path('app_utilisateur_edit_profil_password') }}" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-key me-2"></i>Changer mot de passe
                                </a>
                            </div>

                        {% else %}
                            <div class="text-center">
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    Vous devez être connecté pour voir votre profil.
                                </div>
                                <a href="{{ path('app_login') }}" class="btn btn-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_footer.html.twig' %}

{% endblock %}