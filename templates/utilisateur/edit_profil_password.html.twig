{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark text-center">
                        <h1 class="h3 mb-0"><i class="fas fa-key me-2"></i>Changer mon mot de passe</h1>
                    </div>

                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Sécurité :</strong> Votre mot de passe doit contenir au moins 8 caractères avec des majuscules et des chiffres.
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <span class="text-danger">*</span>
                            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez votre mot de passe actuel'}}) }}
                            <div class="invalid-feedback d-block">{{ form_errors(form.currentPassword) }}</div>
                            <div class="form-text">Confirmez votre identité avec votre mot de passe actuel</div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <span class="text-danger">*</span>
                            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                            <div class="invalid-feedback d-block">{{ form_errors(form.newPassword.first) }}</div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <span class="text-danger">*</span>
                            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmez le nouveau mot de passe'}}) }}
                            <div class="invalid-feedback d-block">{{ form_errors(form.newPassword.second) }}</div>
                            <div class="form-text">Tapez à nouveau votre nouveau mot de passe</div>
                        </div>

                        <!-- Indicateur de force du mot de passe (optionnel) -->
                        <div class="mb-4">
                            <div class="progress" style="height: 5px;">
                                <div class="progress-bar bg-danger" role="progressbar" style="width: 0%" id="password-strength"></div>
                            </div>
                            <small class="text-muted" id="password-feedback">Tapez votre mot de passe pour voir sa force</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <button type="submit" class="btn btn-warning btn-lg me-md-2 text-dark fw-bold">
                                <i class="fas fa-lock me-2"></i>Changer le mot de passe
                            </button>
                            <a href="{{ path('app_utilisateur_profil') }}" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Retour au profil
                            </a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_footer.html.twig' %}

{% endblock %}