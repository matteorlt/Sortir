{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <div class="container mt-5">
        <div class="row flex-lg-row align-items-start g-5">
            <!-- Contenu formulaire à gauche -->
            <div class="col-lg-7 mb-4">
                <div>
                    <div class="card-header text-black text-center">
                        <h1 class="h3 mb-0">Modifier mon profil</h1>
                    </div>

                    <div class="card-body p-4">
                        {# Messages flash #}
                        {% for label, messages in app.flashes %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        {% endfor %}

                        <form method="post" action="" enctype="multipart/form-data" novalidate>
                            <input type="hidden" name="_token" value="{{ csrf_token('edit_profil') }}">

                            {# Photo (optionnelle) #}
                            <div class="mb-4 text-center">
                                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto border border-3"
                                     style="width: 120px; height: 120px; border-color: #8f00ff !important;">
                                    <i class="fas fa-user fa-3x text-white"></i>
                                </div>
                                <div class="mt-3">
                                    <label for="photoFile" class="form-label fw-bold mb-1">Photo de profil</label>
                                    <input class="form-control" type="file" id="photoFile" name="photoFile" accept="image/*">
                                    <div class="form-text">PNG/JPG, 2 Mo max</div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="pseudo" class="form-label fw-bold">Pseudo</label>
                                <span class="text-danger">*</span>
                                <input type="text" class="form-control" id="pseudo" name="pseudo"
                                       value="{{ app.user.pseudo ?? '' }}" maxlength="180" required placeholder="Votre nom d'utilisateur">
                                <div class="form-text">Ce nom sera visible par les autres utilisateurs</div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="nom" class="form-label fw-bold">Nom</label>
                                    <span class="text-danger">*</span>
                                    <input type="text" class="form-control" id="nom" name="nom"
                                           value="{{ app.user.nom ?? '' }}" required placeholder="Votre nom de famille">
                                </div>
                                <div class="col-md-6">
                                    <label for="prenom" class="form-label fw-bold">Prénom</label>
                                    <span class="text-danger">*</span>
                                    <input type="text" class="form-control" id="prenom" name="prenom"
                                           value="{{ app.user.prenom ?? '' }}" required placeholder="Votre prénom">
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label for="telephone" class="form-label fw-bold">Téléphone</label>
                                    <input type="tel" class="form-control" id="telephone" name="telephone"
                                           value="{{ app.user.telephone ?? '' }}" placeholder="06 12 34 56 78">
                                    <div class="form-text">Optionnel - pour être contacté par les organisateurs</div>
                                </div>
                                <div class="col-md-6">
                                    <label for="mail" class="form-label fw-bold">Email</label>
                                    <span class="text-danger">*</span>
                                    <input type="email" class="form-control" id="mail" name="mail"
                                           value="{{ app.user.mail ?? '' }}" required placeholder="votre.email@eni.fr">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="campus" class="form-label fw-bold">Campus</label>
                                <span class="text-danger">*</span>
                                <select id="campus" name="campus" class="form-select">
                                    <option value="">Choisissez votre campus où vous êtes/étiez rattaché(e)</option>
                                    {% for c in ['Rennes','Niort','Nantes','Quimper'] %}
                                        <option value="{{ c }}" {{ (app.user.campus is defined and app.user.campus and app.user.campus.nomCampus == c) ? 'selected' : '' }}>
                                            {{ c }}
                                        </option>
                                    {% endfor %}
                                </select>
                                <div class="form-text">Sélectionnez votre campus ENI</div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                                <button type="submit" class="btn btn-primary btn-lg me-md-2"
                                        style="background-color: #8f00ff; border-color: #8f00ff; transition: all 0.3s ease;"
                                        onmouseover="this.style.backgroundColor='#7300cc'; this.style.borderColor='#7300cc';"
                                        onmouseout="this.style.backgroundColor='#8f00ff'; this.style.borderColor='#8f00ff';">
                                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                </button>
                                <a href="{{ path('app_utilisateur_profil') }}" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i>Retour au profil
                                </a>
                            </div>
                        </form>

                        <hr class="my-4">

                        <div class="text-center">
                            <a href="{{ path('app_utilisateur_edit_profil_password') }}" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-key me-2"></i>Changer mon mot de passe
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Trait de séparation vertical -->
            <div class="col-lg-1 d-none d-lg-flex justify-content-center">
                <div class="border-end h-75 mt-5" style="border-width: 2px !important; border-color: #dee2e6 !important;"></div>
            </div>

            <!-- Image à droite (descendue) -->
            <div class="col-lg-4 d-flex align-items-end justify-content-center">
                <div class="mb-5">
                    <img src="{{ asset('images/photo-modif-profil.jpg') }}"
                         alt="Modification de profil"
                         class="img-fluid"
                         style="max-width: 500px; height: auto;">
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_footer.html.twig' %}

{% endblock %}