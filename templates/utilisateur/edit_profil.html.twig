{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}

  {% include 'components/_header.html.twig' %}

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow">
          <div class="card-header bg-primary text-white text-center">
            <h1 class="h3 mb-0"><i class="fas fa-user-edit me-2"></i>Modifier mon profil</h1>
          </div>

          <div class="card-body p-4">
            {# Messages flash #}
            {% for label, messages in app.flashes %}
              {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                  {{ message }}
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              {% endfor %}
            {% endfor %}

            <form method="post" action="" enctype="multipart/form-data" novalidate>
              <input type="hidden" name="_token" value="{{ csrf_token('edit_profil') }}">

              {# Photo (optionnelle) #}
              <div class="mb-4 text-center">
                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto border border-3 border-primary"
                     style="width: 120px; height: 120px;">
                  <i class="fas fa-user fa-3x text-white"></i>
                </div>
                <div class="mt-3">
                  <label for="photoFile" class="form-label fw-bold mb-1">Photo de profil</label>
                  <input class="form-control" type="file" id="photoFile" name="photoFile" accept="image/*">
                  <small class="text-muted">PNG/JPG, 2 Mo max</small>
                </div>
              </div>

              <div class="mb-3">
                <label for="pseudo" class="form-label fw-bold">Pseudo</label>
                <input type="text" class="form-control" id="pseudo" name="pseudo"
                       value="{{ app.user.pseudo ?? '' }}" maxlength="180" required>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="nom" class="form-label fw-bold">Nom</label>
                  <input type="text" class="form-control" id="nom" name="nom"
                         value="{{ app.user.nom ?? '' }}" required>
                </div>
                <div class="col-md-6 mb-3">
                  <label for="prenom" class="form-label fw-bold">Prénom</label>
                  <input type="text" class="form-control" id="prenom" name="prenom"
                         value="{{ app.user.prenom ?? '' }}" required>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="telephone" class="form-label fw-bold">Téléphone</label>
                  <input type="tel" class="form-control" id="telephone" name="telephone"
                         value="{{ app.user.telephone ?? '' }}" placeholder="06 12 34 56 78">
                </div>
                <div class="col-md-6 mb-3">
                  <label for="mail" class="form-label fw-bold">Email</label>
                  <input type="email" class="form-control" id="mail" name="mail"
                         value="{{ app.user.mail ?? '' }}" required>
                </div>
              </div>

              {# Exemple optionnel: Campus si vous avez cette info côté user
              <div class="mb-3">
                <label for="campus" class="form-label fw-bold">Campus</label>
                <select id="campus" name="campus" class="form-select">
                  <option value="">-- Sélectionner --</option>
                  {% for c in ['Rennes','Niort','Nantes','Quimper'] %}
                    <option value="{{ c }}" {{ (app.user.campus is defined and app.user.campus and app.user.campus.nomCampus == c) ? 'selected' : '' }}>
                      {{ c }}
                    </option>
                  {% endfor %}
                </select>
              </div>
              #}

              <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                <a href="{{ path('app_utilisateur_profil') }}" class="btn btn-outline-secondary">
                  <i class="fas fa-arrow-left me-2"></i>Annuler
                </a>
                <button type="submit" class="btn btn-primary"
                        style="background-color: #8f00ff; border-color: #8f00ff;"
                        onmouseover="this.style.backgroundColor='#7300cc'; this.style.borderColor='#7300cc';"
                        onmouseout="this.style.backgroundColor='#8f00ff'; this.style.borderColor='#8f00ff';">
                  <i class="fas fa-save me-2"></i>Enregistrer
                </button>
              </div>
            </form>

            <hr class="my-4">

            <div class="text-center">
              <a href="{{ path('app_utilisateur_edit_profil_password') }}" class="btn btn-outline-primary">
                <i class="fas fa-key me-2"></i>Changer mon mot de passe
              </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>

  {% include 'components/_footer.html.twig' %}

{% endblock %}