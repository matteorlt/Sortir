{# templates/components/_header.html.twig #}
<header class="bg-white/95 backdrop-blur-sm border-gray-200 sticky top-0 z-50">
    <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">

            <!-- Logo -->
            <div class="flex-shrink-0">
                <a href="{{ path('app_home') }}">
                    <img src="{{ asset('images/logo-sans-nom.png') }}" alt="Logo Sortir.com" class="h-12 w-auto">
                </a>
            </div>

            <!-- Menu principal -->
            <div class="hidden md:block">
                <ul class="flex space-x-8">
                    <li>
                        <a href="{{ path('app_home') }}" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            Accueil
                        </a>
                    </li>
                    <li>
                        <a href="" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            Sorties
                        </a>
                    </li>
                    <li>
                        <a href="" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            Organiser une sortie
                        </a>
                    </li>
                    <li>
                        <a href="" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            À propos
                        </a>
                    </li>
                    <li>
                        <a href="" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            Contact
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Boutons connexion/profil -->
            <div class="flex items-center space-x-4">
                {% if app.user %}
                    <!-- Utilisateur connecté -->
                    <div class="relative">
                        <button type="button" class="bg-gray-900 text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-800 transition-colors">
                            {{ app.user.prenom }} {{ app.user.nom }}
                        </button>

                        <!-- Menu déroulant profil (caché par défaut) -->
                        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 border border-gray-200">
                            <a href="" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mon profil</a>
                            <a href="" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mes sorties</a>
                            <a href="" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mes inscriptions</a>
                            <hr class="my-1">
                            <a href="" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Se déconnecter</a>
                        </div>
                    </div>
                {% else %}
                    <!-- Utilisateur non connecté -->
                    <div class="flex items-center space-x-2">
                        <a href="" class="text-gray-700 hover:text-gray-900 px-3 py-2 text-sm font-medium transition-colors">
                            Se connecter
                        </a>
                        <a href="" class="bg-purple-600 text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-gray-800 transition-colors">
                            S'inscrire
                        </a>
                    </div>
                {% endif %}
            </div>

            <!-- Menu mobile (hamburger) -->
            <div class="md:hidden">
                <button type="button" class="text-gray-700 hover:text-gray-900 p-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    </nav>
</header>