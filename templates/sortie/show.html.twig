{% extends 'base.html.twig' %}

{% block title %}
    Détail de la sortie | {{ sortie.nomSortie }}
{% endblock %}

{% block body %}

    {% include 'components/_header.html.twig' %}

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h2 class="mb-0">{{ sortie.nomSortie }}</h2>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Date de début :</dt>
                            <dd class="col-sm-8">{{ sortie.dateDebut ? sortie.dateDebut|date('d/m/Y H:i') : 'N/A' }}</dd>

                            <dt class="col-sm-4">Durée :</dt>
                            <dd class="col-sm-8">{{ sortie.duree }} heures</dd>

                            <dt class="col-sm-4">Date de clôture :</dt>
                            <dd class="col-sm-8">{{ sortie.dateCloture ? sortie.dateCloture|date('d/m/Y') : 'N/A' }}</dd>

                            <dt class="col-sm-4">Max participants :</dt>
                            <dd class="col-sm-8">{{ sortie.nbInscriptionMax }}</dd>

                            <dt class="col-sm-4">Description :</dt>
                            <dd class="col-sm-8">{{ sortie.descriptionInfos }}</dd>

                            <dt class="col-sm-4">Lieu :</dt>
                            <dd class="col-sm-8">{{ sortie.lieu.nomLieu }}</dd>

                            <dt class="col-sm-4">Rue :</dt>
                            <dd class="col-sm-8">{{ sortie.lieu.rue }}</dd>

                            <dt class="col-sm-4">Ville :</dt>
                            <dd class="col-sm-8">
                                {{ sortie.lieu.ville.nomVille }} ({{ sortie.lieu.ville.codePostal }})
                            </dd>

                            <dt class="col-sm-4">Coordonnées GPS :</dt>
                            <dd class="col-sm-8">
                                {{ sortie.lieu.latitude }}, {{ sortie.lieu.longitude }}
                            </dd>

                            <dt class="col-sm-4">Catégorie :</dt>
                            <dd class="col-sm-8">{{ sortie.categorie }}</dd>

                            <dt class="col-sm-4">Campus :</dt>
                            <dd class="col-sm-8">
                                {{ sortie.campus.nomCampus }}
                            </dd>
                            <dt class="col-sm-4">Organisateur :</dt>
                            {% if sortie.participant %}
                                {% set displayName = (sortie.participant.prenom is defined and sortie.participant.prenom ? (sortie.participant.prenom ~ ' ') : '') ~
                                    (sortie.participant.nom is defined and sortie.participant.nom ? sortie.participant.nom : '') %}
                                <dd class="col-sm-8">
                                    {{ displayName is not empty ? displayName :
                                    (sortie.participant.username is defined and sortie.participant.username ? sortie.participant.username :
                                    (sortie.participant.email is defined and sortie.participant.email ? sortie.participant.email : 'Inconnu')) }}
                                </dd>
                            {% else %}
                                <span class="col-sm-8">Inconnu</span>
                            {% endif %}

                            {# État #}
                            {% set now = "now"|date("U") %}
                            {% set dateCloture = sortie.dateCloture ? sortie.dateCloture|date("U") : 0 %}
                            {% set nbInscrits = sortie.inscriptions ? sortie.inscriptions|length : 0 %}
                            {% set maxInscrits = sortie.nbInscriptionMax %}

                            <dt class="col-sm-4">État :</dt>
                            <dd class="col-sm-8">
                                {% if now > dateCloture or nbInscrits >= maxInscrits %}
                                    <span class="badge bg-danger">Fermé</span>
                                {% else %}
                                    <span class="badge bg-success">Ouvert</span>
                                {% endif %}
                            </dd>

                    </div>
                    <div class="card-footer text-end">
                        <a href="{{ path('app_sortie_list') }}" class="btn btn-secondary">← Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% include 'components/_footer.html.twig' %}

{% endblock %}
